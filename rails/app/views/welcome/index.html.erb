<div class="welcome" style="background-image: url('<%= current_community.background_img.attached? ? url_for(current_community.background_img) : asset_path('welcome-bg.jpg') %>')" >
  <div class="welcome-card">
    <%= image_tag 'logocombo.svg', alt: 'Terrastories' %>
    <% if user_signed_in? %>
      <h1><%= t("welcome_back") %></h1>
    <% else %>
      <h1><%= t("welcome") %></h1>
    <% end %>

    <%= link_to home_map_path do %>
      <button><%= t("enter") %></button>
    <% end %>

    <div class="welcome-card-user">
      <% if user_signed_in? %>
        <%= link_to t("member_dashboard"), member_root_path, :class => 'navbar-link' %> |
        <%= link_to t("logout"), destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, :class => 'navbar-link'  %>
      <% else %>
        <%= link_to t("login"), new_user_session_path, :class => 'navbar-link'  %>
      <% end %>
    </div>

    <div class="language-picker">
      <%= t("language") %>:
      <%= application_locales %>
    </div>
  </div>
  <% if current_community.sponsor_logos.attached? %>
    <div class="logo">
      <% current_community.sponsor_logos.each do |logo| %>
        <%= image_tag logo %>
      <% end %>
    </div>
  <% end %>
</div>
