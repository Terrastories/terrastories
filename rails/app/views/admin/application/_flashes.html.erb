<%#
# Flash Partial

This partial renders flash messages on every page.

## Relevant Helpers:

- `flash`:
  Returns a hash,
  where the keys are the type of flash (alert, error, notice, etc)
  and the values are the message to be displayed.
%>

<% if flash.any? %>
  <div class="flashes">
    <% flash.each do |key, value| -%>
      <div class="flash flash-<%= key %>">
      <% if value.instance_of? String %>
        <%= value.html_safe %> 
      <% else %>
        <% value.each do |line_number, error_array| %>
          <b><%= line_number %></b>
          <ul>
            <% error_array.each do |e| %>
              <li>
                <%= e.html_safe %>
              </li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
      </div>
    <% end -%>
  </div>
<% end %>